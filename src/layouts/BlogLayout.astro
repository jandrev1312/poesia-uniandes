---
import type { Frontmatter } from "@/types"
import { AppConfig } from "@/utils/AppConfig"
import Layout from "./Layout.astro"

interface Props {
  frontmatter: Frontmatter
}

const { frontmatter } = Astro.props as Props
const titleSuffix = ` - ${AppConfig.site_name}`
const titlePost = frontmatter.title
const title = titlePost + titleSuffix
---

<Layout title={title} description={frontmatter.description}>
  <div
    class="max-w-2xl flex flex-col items-center mx-auto mt-[83px] pt-12 mb-20"
  >
    <img
      src={frontmatter.photoThumbnail}
      alt="Post image"
      class="w-full h-80 rounded-2xl mb-10"
    />
    <div class="flex flex-col items-center text-center mb-10">
      <h2 class="text-5xl leading-snug mb-8">{frontmatter.title}</h2>
      <div>
        <a href={frontmatter.authorLink} target="_blank">
          <div class="text-sm font-medium hover:underline">
            {frontmatter.author}
          </div>
        </a>
        <p class="text-xs">{frontmatter.date}</p>
      </div>
    </div>
    <div class="w-full h-[1px] bg-gray-300 mb-10"></div>
    <div class="w-full text-lg flex flex-col">
      <slot />
    </div>
  </div>
</Layout>
