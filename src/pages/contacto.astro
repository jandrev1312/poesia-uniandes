---
import SecondaryLayout from "@/layouts/SecondaryLayout.astro"
import { Icon } from "astro-icon"
---

<SecondaryLayout>
  <div class="py-32 space-y-16 px-4">
    <h1 class="font-medium text-4xl text-center">Contacto</h1>
    <div class="flex flex-col items-center space-y-5">
      <div class="flex items-center space-x-2">
        <Icon name="ant-design:mail-outlined" class="w-6" />
        <a>poesia@uniandes.edu.co</a>
      </div>
      <div class="flex items-center space-x-2">
        <Icon name="akar-icons:instagram-fill" class="w-6" />
        <a>@poesiauniandes</a>
      </div>
      <div class="flex items-center space-x-2">
        <Icon name="akar-icons:facebook-fill" class="w-6" />
        <a>poesia.uniandes</a>
      </div>
    </div>
  </div>
</SecondaryLayout>
