---
import { Icon } from "astro-icon"

interface Props {
  photoThumbnail: string
  author: string
  authorLink: string
  date: string
  title: string
  href: string
}

const { photoThumbnail, title, author, date, href, authorLink } =
  Astro.props as Props
const linkToArticle = `/blog/${href}`
---

<div class="w-[356px] flex flex-col">
  <a href={linkToArticle} class="mb-4">
    <img
      src={photoThumbnail}
      alt="Article card"
      class="w-[356px] rounded-md aspect-square hover:opacity-70 drop-shadow-lg transition-opacity object-cover"
    />
  </a>
  <div class="flex flex-col">
    <a href={linkToArticle} class="mb-3">
      <h3 class="text-2xl hover:underline">{title}</h3>
    </a>
    <div class="flex justify-between">
      <div>
        <a href={authorLink} target="_blank">
          <div class="text-sm font-medium hover:underline">{author}</div>
        </a>
        <p class="text-xs">{date}</p>
      </div>
      <a
        class="flex font-medium items-center text-xl hover:scale-110 duration-200 ease-in font-serif"
        href={linkToArticle}
      >
        Leer<span><Icon name="akar-icons:arrow-right" class="w-5 ml-1" /></span>
      </a>
    </div>
  </div>
</div>
